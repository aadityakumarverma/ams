<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginVertical">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_style_bold">
        <item name="android:fontFamily">@font/poppins_extra_bold</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_style_normal">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="errorEnabled">true</item>

        <item name="boxCornerRadiusBottomEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_50sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_50sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_50sdp</item>
    </style>

</resources>