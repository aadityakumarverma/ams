<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginVertical">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_style_bold">
        <item name="android:fontFamily">@font/poppins_extra_bold</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textStyle">bold</item>
