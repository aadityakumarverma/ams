<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ams" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/app_dark</item>
        <item name="colorPrimaryDark">@color/app_dark</item>
        <item name="colorAccent">@color/app_dark</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">@color/white</item>-->
        <!-- Removes default splash screen. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorHighlight">@color/app_highlight</item>
        <!-- Set default fontFamily. -->
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>

        <!--Adjust screen scroll when keyboard shows-->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.Ams" parent="Base.Theme.Ams">
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>