<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/llItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_cornered10"
                android:backgroundTint="@color/app_dark"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDate"
                    style="@style/text_style_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_header_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvMonth"
                    style="@style/text_style_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUG"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_smallest_size"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCompetitionName"
                    style="@style/text_style_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="National Championships"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/tv_label_size"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvCompetitionDetails"
                    style="@style/text_style_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="400m Sprint . Senior Level"
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/tv_smallest_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivMedal"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/gold"
                android:src="@drawable/ic_medal"
                app:contentPadding="@dimen/_5sdp"
                app:shapeAppearance="@style/Circular" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>