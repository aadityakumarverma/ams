<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="@dimen/_0sdp"
                android:layout_height="@dimen/_0sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/png_otp_sticker"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="4:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/text_style_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:text="OTP Verification"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/tv_header_size"
            android:textStyle="bold" />
        <TextView
            style="@style/text_style_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:text="You are almost there!\nPlease enter the OTP as shared on your registered mobile number XXXXXXXX23"
            android:textColor="@color/app_gray"
            android:textStyle="normal" />

        <LinearLayout
            android:id="@+id/llOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_20sdp"
            android:orientation="horizontal"
            android:weightSum="6">
            <EditText
                android:id="@+id/etOtp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_otp"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="•"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/app_dark"
                android:textSize="@dimen/et_text_size" />
            <EditText
                android:id="@+id/etOtp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_otp"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="•"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/app_dark"
                android:textSize="@dimen/et_text_size" />
            <EditText
                android:id="@+id/etOtp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_otp"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="•"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/app_dark"
                android:textSize="@dimen/et_text_size" />
            <EditText
                android:id="@+id/etOtp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_otp"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="•"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/app_dark"
                android:textSize="@dimen/et_text_size" />
            <EditText
                android:id="@+id/etOtp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_otp"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="•"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/app_dark"
                android:textSize="@dimen/et_text_size" />

            <EditText
                android:id="@+id/etOtp6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/et_bg_otp"
                android:digits="0123456789"
                android:gravity="center"
                android:hint="•"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:paddingVertical="@dimen/_10sdp"
                android:textColor="@color/app_dark"
                android:textSize="@dimen/et_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/text_style_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP Received? "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvResendOtp"
                style="@style/text_style_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:textColor="@color/selected_color"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvMainBtn"
            style="@style/btn_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginHorizontal="@dimen/_0sdp"
            android:transitionName="main_btn"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="@dimen/_0sdp"
            app:cardMaxElevation="@dimen/_0sdp">
            <TextView
                android:id="@+id/tvMain"
                style="@style/text_style_normal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/bg_gradient_btn"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_15sdp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_text_size"
                android:textStyle="bold" />
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/lpbProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:visibility="gone"
                app:indicatorColor="@color/btn_green_half"
                app:indicatorTrackGapSize="@dimen/_0sdp"
                app:trackColor="@color/colorLoaderHighlight"
                app:trackCornerRadius="@dimen/_50sdp"
                app:trackStopIndicatorSize="@dimen/_0sdp"
                app:trackThickness="@dimen/_50sdp" />
            <ImageView
                android:id="@+id/ivTick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/btn_green"
                android:paddingVertical="@dimen/_15sdp"
                android:src="@drawable/ic_check_tick"
                android:visibility="gone"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>
