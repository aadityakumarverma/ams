<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/report_icon_bg1"
                android:elevation="@dimen/_0sdp"
                android:src="@drawable/ic_biochemical"
                app:contentPaddingBottom="@dimen/_5sdp"
                app:contentPaddingEnd="@dimen/_6sdp"
                app:contentPaddingStart="@dimen/_6sdp"
                app:contentPaddingTop="@dimen/_5sdp"
                app:shapeAppearance="@style/Circular" />

            <TextView
                android:id="@+id/tvName"
                style="@style/text_style_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Iron Profile"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/tv_small_size"
                android:textStyle="bold" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivExpand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:elevation="@dimen/_0sdp"
                android:padding="@dimen/_1sdp"
                android:src="@drawable/ic_plus"
                app:contentPaddingBottom="@dimen/_5sdp"
                app:contentPaddingEnd="@dimen/_6sdp"
                app:contentPaddingStart="@dimen/_6sdp"
                app:contentPaddingTop="@dimen/_5sdp"
                app:shapeAppearance="@style/Circular"
                app:strokeColor="@color/line_gray"
                app:strokeWidth="@dimen/_1sdp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llSubContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/layout_report_subitem"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
