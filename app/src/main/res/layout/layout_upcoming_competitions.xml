<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_0sdp"
        android:layout_height="@dimen/_0sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_0sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/png_pattern_1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/text_style_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Competition"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_smallest_size"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tvTrainingObjective"
                        style="@style/text_style_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jakarta International Challenge 2025"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_label_size"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        style="@style/text_style_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_mid_header_size"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/text_style_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days to go"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_smallest_size"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDate"
                    style="@style/text_style_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/date_format"
                    android:textColor="#80000000"
                    android:textSize="@dimen/tv_small_size"
                    android:textStyle="bold" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:background="@drawable/ic_cup"
                    android:backgroundTint="#50000000"
                    android:elevation="@dimen/_0sdp"
                    android:scaleType="centerCrop"
                    app:contentPadding="@dimen/_10sdp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>